<section>
  <div class="container">
    <div class="text-center mt-2">
    </div>
    <div class="row">
      <div class="col-lg-7 mx-auto">
        <div class="card mt-2 mx-auto p-4 bg-light">
          <div class="card-body bg-light">
            <div class="container">
      <h6 class="text-center text-primary mb-3 mt-0">Add Product</h6>
              <form id="contact-form" role="form"  class="form-inline"
              action=""
              method="post"
              enctype="multipart/form-data">
              
                <div class="controls">
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="form_name" class="mb-2">Product Name</label>
                        <input
                          type="text"
                          class="form-control"
                          name="name"
                          required
                        />
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="form_lastname" class="mb-2">Product Varient</label>
                        <input
                          type="text"
                          class="form-control"
                          name="varient"
                          required
                        />
                      </div>
                    </div>
                  </div>
                  
                   <div class="controls">
                  <div class="row mt-5">
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="form_name" class="mb-2">Product Category</label>
                        <input
                          type="text"
                          class="form-control"
                          name="category"
                          required
                        />
                      </div>
                    </div>
                    
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="form_lastname" class="mb-2">Product Price</label>
                        <input
                          type="text"
                          class="form-control"
                          name="price"
                          value="&#8377;"
                          required
                        />
                      </div>
                    </div>
                  </div>
                  <div class="row mt-5 ">
                    <div class="col-md-6 mb-5">
                      <div class="form-group">
                        <label for="form_lastname" class="mb-2">Images</label>
                        <input
              type="file"
              class="form-control"
              name="image"
              required
              onchange="Newimage(event)"
            />
                      </div>
                      <div class="col-md-6 mt-4">
                        <label for="">Preview</label>
                      <img
            src="/public/images/upload.png"
            style="width: 130px;height:120px;"
            id="currentImage" class="mt-2"
          />
</div>

<div class="row mt-5 ">
                     <div class="col-md-6">
    <div class="form-group">
      <label>Text area</label>
      <textarea class=" textareas" rows="10" style="width: 100%;"></textarea>
    </div>
  </div>
                    <div class="col-md-12">
                      <button type="submit" class="btn btn-primary">Add Product</button>
                      <a href="/admin" class="btn btn-primary ml-4">Cancel</a>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
        <!-- /.8 -->
      </div>
      <!-- /.row-->

    </div>
  </div>

  <form action="">
    <div class="conatiner">
      <div class="row">
        
      </div>
    </div>
  </form>

</section>
<script>
  function Newimage(event){
  document.getElementById('currentImage').src=URL.createObjectURL(event.target.files[0])
  }
</script>